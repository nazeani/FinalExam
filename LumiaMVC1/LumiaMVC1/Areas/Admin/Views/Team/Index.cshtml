@using Core.Models
@model List<Team>
@{
    int count = 1;
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div><a asp-action="Create" class="btn btn-outline-info">Create</a> </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <th scope="row">@(count++)</th>
                        <td>@item.Id</td>
                        <td>@item.FullName</td>
                        <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.XLink</td>
                            <td>@item.FbLink</td>
                            <td>@item.IgLink</td>
                            <td>@item.InLink</td>
                            <td><img src="~/uploads/teams/@item.ImageUrl"  width="100" height="100"/></td>
                            <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-primary ">Update</a></td>
                            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>