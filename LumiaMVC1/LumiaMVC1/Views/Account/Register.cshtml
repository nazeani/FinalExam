@using LumiaMVC1.ViewModels
@model UserRegisterVM
<div class="container" style="margin:100px;">
    <div class="row">
        <div class="col-12">
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">UserName</label>
                    <input asp-for="UserName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="UserName" style="color:red"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Email</label>
                    <input asp-for ="Email" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="Email" style="color:red"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="Password" style="color:red"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">RepeatPassword</label>
                    <input asp-for="RepeatPassword" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="RepeatPassword" style="color:red"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>